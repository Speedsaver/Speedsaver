# Minimal SD card image for the OrangePi Zero
#
image boot.vfat {
	vfat {
		files = {
			"zImage",
			"sun8i-h2-plus-orangepi-zero.dtb",
			"boot.scr"
		}
	}
	size = 10M
}

image data.vfat {
	vfat {
		label = "DATA"
	}
	empty = "true"
	size = 2G
}

image sdcard-${GENIMAGE_BUILD_ID}.img {
	hdimage {
	}

	partition u-boot {
		in-partition-table = "no"
		image = "u-boot-sunxi-with-spl.bin"
		offset = 8192
		size = 1040384 # 1MB - 8192
	}

	partition data {
		partition-type = 0xC
		image = "data.vfat"
	}

	partition boot {
		partition-type = 0xC
		bootable = "true"
		image = "boot.vfat"
	}

	partition rootfs {
		partition-type = 0x83
		image = "rootfs.ext4"
size = 1G
	}
}
